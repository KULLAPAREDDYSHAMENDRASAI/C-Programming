#include <stdio.h>

// Define a structure called 'Person'
struct Person {
    char name[50];
    int age;
    float height;
};

int main() {
    // Initialize a structure variable and its members
    struct Person person1 = {"John Doe", 30, 5.9};

    // Print the values of the members of the structure
    printf("Person Details:\n");
    printf("Name: %s\n", person1.name);
    printf("Age: %d\n", person1.age);
    printf("Height: %.2f meters\n", person1.height);

    return 0;
}
